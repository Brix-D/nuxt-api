{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": [
    "./.nuxt/tsconfig.json"
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "./.nuxt/nuxt.d.ts",
    "./**/*.ts",
    "./**/*.mts",
    "./**/*.tsx",
    "./**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "./dist",
    "./.output",
    "node_modules"
  ]
}
